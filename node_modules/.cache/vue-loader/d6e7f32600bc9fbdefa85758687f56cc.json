;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;AAoFA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA","file":"index.vue","sourceRoot":"src/components/Pagination","sourcesContent":["<template>\r\n  <div class=\"pagination\">\r\n    <button :disabled=\"pageNo == 1\" @click=\"$emit('getPageNo', pageNo - 1)\">\r\n      上一页\r\n    </button>\r\n    <button\r\n      v-if=\"startNumAndEndNum.start > 1\"\r\n      @click=\"$emit('getPageNo', 1)\"\r\n      :class=\"{ active: pageNo == 1 }\"\r\n    >\r\n      1\r\n    </button>\r\n    <button v-if=\"startNumAndEndNum.start > 2\">···</button>\r\n\r\n    <!-- 中间部分 -->\r\n    <button\r\n      v-for=\"(page, index) in startNumAndEndNum.end\"\r\n      :key=\"index\"\r\n      v-if=\"page >= startNumAndEndNum.start\"\r\n      @click=\"$emit('getPageNo', page)\"\r\n      :class=\"{ active: pageNo == page }\"\r\n    >\r\n      {{ page }}\r\n    </button>\r\n    <button v-if=\"startNumAndEndNum.end < totalPage - 1\">···</button>\r\n    <button\r\n      v-if=\"startNumAndEndNum.end < totalPage\"\r\n      @click=\"$emit('getPageNo', totalPage)\"\r\n    >\r\n      {{ totalPage }}\r\n    </button>\r\n    <button\r\n      :disabled=\"pageNo == totalPage\"\r\n      @click=\"$emit('getPageNo', pageNo + 1)\"\r\n    >\r\n      下一页\r\n    </button>\r\n\r\n    <button\r\n      style=\"margin-left: 30px\"\r\n      @click=\"$emit('getPageNo', totalPage)\"\r\n      :class=\"{ active: pageNo == totalPage }\"\r\n    >\r\n      共{{ total }}条\r\n    </button>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: \"Pagination\",\r\n  props: [\"pageNo\", \"pageSize\", \"total\", \"continues\"],\r\n  computed: {\r\n    //计算总共多少页\r\n    totalPage() {\r\n      return Math.ceil(this.total / this.pageSize);\r\n    },\r\n    //计算出连续的页码的起始数字与结束数字\r\n    startNumAndEndNum() {\r\n      const { continues, pageNo, totalPage } = this;\r\n      //存储起始的数字与结束的数字\r\n      let start = 0,\r\n        end = 0;\r\n      //连续的页码数是5如果出现不正常的现象就不该5页\r\n      if (continues > totalPage) {\r\n        start = 1;\r\n        end = totalPage;\r\n      } else {\r\n        start = pageNo - parseInt(continues / 2);\r\n        end = pageNo + parseInt(continues / 2);\r\n        //把出现不正常的数字负数 0 纠正\r\n        //end大于总页码纠正\r\n        if (end > totalPage) {\r\n          end = totalPage;\r\n          start = totalPage - continues + 1;\r\n        }\r\n      }\r\n      return { start, end };\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style lang=\"less\" scoped>\r\n.pagination {\r\n  text-align: center;\r\n  button {\r\n    margin: 0 5px;\r\n    background-color: #f4f4f5;\r\n    color: #606266;\r\n    outline: none;\r\n    border-radius: 2px;\r\n    padding: 0 4px;\r\n    vertical-align: top;\r\n    display: inline-block;\r\n    font-size: 13px;\r\n    min-width: 35.5px;\r\n    height: 28px;\r\n    line-height: 28px;\r\n    cursor: pointer;\r\n    box-sizing: border-box;\r\n    text-align: center;\r\n    border: 0;\r\n\r\n    &[disabled] {\r\n      color: #c0c4cc;\r\n      cursor: not-allowed;\r\n    }\r\n\r\n    &.active {\r\n      cursor: not-allowed;\r\n      background-color: #409eff;\r\n      color: #fff;\r\n    }\r\n  }\r\n}\r\n</style>\r\n"]}]}